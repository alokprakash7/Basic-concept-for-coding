# include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter the length of your word"<<endl;
    cin>>n;
    cout<<"Enter your word"<<endl;
    char arr[n+1];
    cin>>arr;
   
   int code;
    for(int i =0; i<n; i++){
        if(arr[i] == arr[n-1-i]){
            code =0;
           
            }
            }
            if(code==0){
                cout<<"Congrats...your word is a palindrome"<<endl;
            }
            else{
                cout<<"Sorry....your word is not a palindrome"<<endl;
            }
}
